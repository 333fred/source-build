<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectDirectory Condition="'$(PathToRepo)' != ''">$(PathToRepo)</ProjectDirectory>
    <BuildCommand>$(ProjectDirectory)/build-native$(ShellExtension) --configuration $(Configuration)</BuildCommand>
    <BuildPackagesCommand>$(ProjectDirectory)/build-packages$(ShellExtension) --configuration $(Configuration) --runtime-id $(TargetRid)</BuildPackagesCommand>
    <PackagesOutput>$(ProjectDirectory)/bin/packages/$(Configuration)/</PackagesOutput>
  </PropertyGroup>
</Project>